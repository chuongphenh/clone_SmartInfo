<?xml version="1.0" encoding="utf-8" ?>
<configuration>
	<configSections>
		<section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler"/>
	</configSections>
	<log4net>
		<root>
			<level value="DEBUG" />
		</root>

		<logger name="SmartInfo">
			<appender-ref ref="SmartInfo_Appender" />
		</logger>
		<appender name="SmartInfo_Appender" type="log4net.Appender.RollingFileAppender">
			<file value="Logs\SmartInfo_Log.txt"/>
			<appendToFile value="true"/>
			<rollingStyle value="Size"/>
			<maximumFileSize value="1MB" />
			<maxSizeRollBackups value="10" />
			<encoding value="utf-8" />
			<layout type="log4net.Layout.PatternLayout">
				<conversionPattern value="%d [%t] %-5p %c - %m%n"/>
			</layout>
		</appender>
		<logger name="ServiceNotification">
			<appender-ref ref="ServiceNotification_Appender" />
		</logger>
		<appender name="ServiceNotification_Appender" type="log4net.Appender.RollingFileAppender">
